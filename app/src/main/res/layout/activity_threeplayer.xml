<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nlovas.nlovas_reflex.ThreeplayerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/playeronebutton"
        android:width="400dp"
        android:height="150dp"
        android:background="#198C19"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="p1of3click"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/playertwobutton"
        android:height="150dp"
        android:background="#75BA75"
        android:onClick="p2of3click"
        android:layout_below="@+id/playeronebutton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 3"
        android:id="@+id/playerthreebutton"
        android:height="150dp"
        android:background="#AED6AE"
        android:onClick="p3of3click"
        android:layout_below="@+id/playertwobutton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentStart="true" />
</RelativeLayout>
