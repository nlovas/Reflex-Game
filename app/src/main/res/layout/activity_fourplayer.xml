<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nlovas.nlovas_reflex.FourplayerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:id="@+id/fourponebutton"
        android:layout_alignParentTop="true"
        android:width="500dp"
        android:layout_alignParentStart="true"
        android:height="100dp"
        android:background="#198C19"
        android:onClick="p1of4click"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/fourptwobutton"
        android:height="100dp"
        android:background="#46A346"
        android:layout_below="@+id/fourponebutton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_alignParentStart="true"
        android:onClick="p2of4click"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 3"
        android:id="@+id/fourpthreebutton"
        android:height="100dp"
        android:background="#75BA75"
        android:onClick="p3of4click"
        android:layout_below="@+id/fourptwobutton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 4"
        android:id="@+id/fourpfourbutton"
        android:height="100dp"
        android:background="#BADCBA"
        android:onClick="p4of4click"
        android:layout_below="@+id/fourpthreebutton"
        android:layout_marginTop="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/fourpthreebutton" />
</RelativeLayout>
