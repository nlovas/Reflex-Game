
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buzzer Game!"
        android:id="@+id/buzzergametextview"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Single Player"
        android:id="@+id/singleplayerbutton"
        android:background="#8CC58C"
        android:height="100dp"
        android:textSize="25sp"
        android:layout_below="@+id/buzzergametextview"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/statisticsbutton"
        android:onClick="showprep"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Gameshow Mode"
        android:id="@+id/gameshowmodebutton"
        android:background="#8CC58C"
        android:textSize="25sp"
        android:height="100dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/singleplayerbutton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/singleplayerbutton"
        android:onClick="selectnumplayers"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text="Statistics"
        android:id="@+id/statisticsbutton"
        android:background="#8CC58C"
        android:height="100dp"
        android:textSize="25sp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/gameshowmodebutton"
        android:layout_alignParentStart="true"
        android:onClick="statselect"/>

</RelativeLayout>